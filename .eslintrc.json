{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended",
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prop-types": 0,
    "@next/next/no-img-element": "off",
    "no-console": "error",
    "react/jsx-indent": ["error", 2],
    "max-len": ["error", { "code": 120 }]
  },
  "ignorePatterns": ["/public"]
}
